{
  "expo": {
    "name": "Check&Earn",
    "slug": "checkandearn",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "checkandearn",
    "userInterfaceStyle": "automatic",

    "icon": "./assets/images/icon.png",

    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563EB"
    },

    "updates": {
      "fallbackToCacheTimeout": 0
    },

    "assetBundlePatterns": [
      "**/*"
    ],

    "ios": {
      "bundleIdentifier": "com.checkandearn.mobile",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Check&Earn benötigt Zugriff auf die Kamera, um Mission-Proofs hochzuladen.",
        "NSLocationWhenInUseUsageDescription": "Check&Earn benötigt deinen Standort, um Missionen in deiner Nähe anzuzeigen."
      }
    },

    "android": {
      "package": "com.checkandearn.mobile",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#2563EB"
      }
    },

    "web": {
      "favicon": "./assets/images/favicon.png"
    },

    "extra": {
      "eas": {
        "projectId": "db32f136-bfc9-4112-8728-2ba26fa89806"
      }
    }
  }
}
